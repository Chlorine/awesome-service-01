{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "Изменение пароля пользователя",
  "type": "object",
  "additionalProperties": true,
  "required": ["oldPassword", "newPassword"],
  "properties": {
    "oldPassword": {
      "type": "string",
      "minLength": 8,
      "maxLength": 101
    },
    "newPassword": {
      "type": "string",
      "minLength": 8,
      "maxLength": 101
    }
  }
}