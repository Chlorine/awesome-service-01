{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "Изменение анкеты",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id"
  ],
  "properties": {
    "id": {
      "description": "ID объекта",
      "type": "string",
      "pattern": "^[0-9a-fA-F]{24}$"
    },
    "name": {
      "type": "string",
      "description": "Название",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "description": "Описание",
      "minLength": 0,
      "maxLength": 512
    }
  }
}