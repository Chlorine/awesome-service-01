{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "Создание нового пользователя",
  "type": "object",
  "additionalProperties": true,
  "required": ["email", "password", "firstName", "middleName", "lastName"],
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string",
      "minLength": 4,
      "maxLength": 12
    },
    "firstName": {
      "type": "string",
      "description": "Имя",
      "minLength": 0,
      "maxLength": 64
    },
    "middleName": {
      "type": "string",
      "description": "Отчество",
      "minLength": 0,
      "maxLength": 64
    },
    "lastName": {
      "type": "string",
      "description": "Фамилия",
      "minLength": 0,
      "maxLength": 64
    }
  }
}