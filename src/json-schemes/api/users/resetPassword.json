{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "Сброс пароля пользователя",
  "type": "object",
  "additionalProperties": true,
  "required": ["token", "password"],
  "properties": {
    "token": {
      "description": "Токен для сброса",
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "password": {
      "description": "Новый пароль",
      "type": "string",
      "minLength": 8,
      "maxLength": 101
    }
  }
}