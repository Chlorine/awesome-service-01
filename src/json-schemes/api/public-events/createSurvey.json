{
  "schema": "http://json-schema.org/draft-07/schema#",
  "title": "Создание новой анкеты",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "name",
    "description"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Название",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "description": "Описание",
      "minLength": 0,
      "maxLength": 512,
      "default": ""
    }
  }
}